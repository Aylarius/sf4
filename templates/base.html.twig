<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Learn for Symfony Certification{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/app.css') }}">
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <header class="flex-column flex-md-row">
                <div class="text-center flex-row" id="welcome">
                    <h1><a href="{{ path('homepage') }}" target="_self">Learn for Symfony Certification</a></h1>
                </div>
                <nav class="navbar navbar-expand-lg flex-row justify-content-center">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#categoryNav" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fa fa-bars" aria-hidden="true"></i>
                    </button>
                    <div class="collapse navbar-collapse" id="categoryNav">
                        <ul class="navbar-nav ">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('homepage') }}" target="_self"><i class="fa fa-home"></i> Home</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="categoryDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Categories
                                </a>
                                <div class="dropdown-menu" aria-labelledby="categoryDropdown">
                                    {{ render(controller(
                                    'App\\Controller\\DefaultController::customMenu',
                                    { 'max': 10 }
                                    )) }}
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('about') }}">About</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </header>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block footer %}
            <footer class="flex-column">
                <div class="justify-content-center" id="footer-wrapper">
                    <div id="footer-content">
                        Made with &nbsp<i class="fa fa-heart"></i>&nbsp by Aylarius
                    </div>
                </div>
            </footer>
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('build/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
