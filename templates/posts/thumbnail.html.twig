<div class="card flex-md-row mb-4 box-shadow">
    <div class="card-body d-flex flex-column align-items-start">
        <strong class="d-inline-block mb-2 text-success">{{ post.category }}</strong>
        <h3 class="mb-0">
            <a class="text-dark" href="#">{{ post.title }}</a>
        </h3>
        <div class="mb-1 text-muted">{{ post.createdAt|date("F jS Y	\\a\\t g:iA") }}</div>
        <p class="card-text mb-auto">{{ post.content|length > 50 ? post.content|slice(0, 50) ~ '...' : post.content }}</p>
        <a href="#">Learn more</a>
    </div>
</div>